<?xml version="1.0" encoding="utf-8"?>      <!-- Version de xml et encodage -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.upec.zulemie.projetlp.MainActivity"> <!-- Définition du cadre graphique de l'application-->

    <ImageView
        app:srcCompat="@drawable/planiut"
        android:layout_centerHorizontal="true"
        android:id="@+id/plan"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="420dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content" /> <!-- Paramètres de l'image représentant le plan de L'IUT -->

    <TextView
        android:text="Couverture WIFI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/position" /> <!-- Paramètres du texte au dessus du plan -->

    <ImageView
        android:layout_width="25dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/access"
        android:visibility="gone"
        android:id="@+id/access"
        android:layout_alignTop="@+id/plan"
        android:layout_alignLeft="@+id/plan"
        android:layout_alignStart="@+id/plan" /> <!-- Paramètres de l'image du point d'accès qui apparaît après triangulation -->

</RelativeLayout>
